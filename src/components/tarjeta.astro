---

interface Props {
    nombre: string;
    colorTitle: string;
    colorTriangle: string;
    url: string;
    enlace: string;
    alt: string;

}

const {nombre, url,  alt, colorTitle, colorTriangle, enlace} = Astro.props;
---

<!-- <section class ="w-[400px] h-[400px]  "> -->
    <div class="card">
       <a href={enlace}>
        <div class="card-img ">
            <div class={`triangle ${colorTriangle} to-50% `}></div>
            <img src={url} alt={alt} class="col-span-10 hover:cursor-pointer w-full h-full " />
        </div>
        <div class={`title ${colorTitle}`}>{nombre} </div>
    </div>
<!-- </section> -->



