---
//Imagenes para carrusel 
import bgCatalogo from "../img/bnrBG_catalogos.webp";
import bgDocs from "../img/bnrBG_docs.webp";
import bgConv from "../img/bnrBG_conv.webp";
import bgResul from "../img/bnrBG_resultados.webp";
import bgProceso from "../img/bnrBG_proceso.webp";

import Slides from "./Slides.astro";



---



<div id="default-carousel" class="relative w-full max-w-6xl mx-auto overflow-hidden" data-carousel="slide" data-carousel-interval="10000">
    <!-- Carousel wrapper -->
    <div class="relative h-56 overflow-hidden  md:h-96">
         <!-- Item 1 -->
        <div class="hidden duration-700 ease-in-out" data-carousel-item>
           <Slides
              titulo = "Convocatoria 2025 para la asignación de equipos de cómputo  con recursos de la partida 514 de la UNAM "
              matiz = "bg-convocatoria/60"
              enlace="/docs/catic_convocatoria_2025.pdf"
              imagen={bgConv.src}
          
            />
        </div>
        <!-- Item 2 -->
        <div class="hidden duration-700 ease-in-out" data-carousel-item>
            <Slides
              titulo = "Catálogo base para equipo de cómputo y periféricos. Partida 514, ejercicio 2025.  "
              matiz = "bg-catalogo/60"
              enlace="/docs/CatalogoBase-2025-180325.pdf"
              imagen={bgCatalogo.src}
              
            />
        </div>
        <!-- Item 3 -->
        <div class="hidden duration-700 ease-in-out" data-carousel-item>
           <Slides
            titulo = "Proceso de alta de equipos asignados por Convocatoria 2024 del CATIC"
            matiz = "bg-proceso/70"
            imagen={bgProceso.src}
            enlace="/docs/archivos/Proceso_de_registro_de_alta_a_reserva_2024.pdf"
          
          />
        </div>
        <!-- Item 4 -->
        <div class="hidden duration-700 ease-in-out" data-carousel-item>
           <Slides
            titulo = "Principios del software libre y código abierto en la UNAM"
            matiz = "bg-docs/80"
            enlace="https://www.red-tic.unam.mx/recursos/2024/2024_Principios_SWLibre.pdf"
            imagen={bgDocs.src}
          />
        </div>

    </div>
    <!-- Slider indicators -->
    <div class="absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3 rtl:space-x-reverse">
        <button type="button" class="w-3 h-3 rounded-full" aria-current="true" aria-label="Slide 1" data-carousel-slide-to="0"></button>
        <button type="button" class="w-3 h-3 rounded-full" aria-current="false" aria-label="Slide 2" data-carousel-slide-to="1"></button>
        <button type="button" class="w-3 h-3 rounded-full" aria-current="false" aria-label="Slide 3" data-carousel-slide-to="2"></button>
        <button type="button" class="w-3 h-3 rounded-full" aria-current="false" aria-label="Slide 4" data-carousel-slide-to="3"></button>
    </div>
    <!-- Slider controls -->
    <button type="button" class="absolute md:top-0 md:start-0 start-0 top-10 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev>
        <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30  group-hover:bg-white/50 ">
            <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
            </svg>
            <span class="sr-only">Previous</span>
        </span>
    </button>
    <button type="button" class="absolute md:top-0 md:end-0 end-0 top-10 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none " data-carousel-next>
        <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30  group-hover:bg-white/50 ">
            <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
            </svg>
            <span class="sr-only">Next</span>
        </span>
    </button>
</div>