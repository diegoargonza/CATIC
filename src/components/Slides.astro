---
 interface Props {

    titulo: string
    texto: string
    matiz: string
    imagen: string
    enlace?: string
 }

 const {titulo, texto, matiz, imagen, enlace} = Astro.props;
---
    <div class=" relative w-full flex-shrink-0 md:h-full">
        <img src={imagen} class="w-full h-full " alt="">
        <div class={`absolute inset-0 flex flex-col items-center justify-center text-white px-20 md:px-32 ${matiz}`}>
            <h2 class=" text-[1rem] md:text-xl lg:text-3xl font-bold text-center">{titulo}</h2>
            <p class="text-xs text-center md:text-lg cursor-pointer hover:bg-sky-700  rounded-md mt-2"><a href={enlace} target="_blank">{texto}</a></p>
        </div>
    </div>


