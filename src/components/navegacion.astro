---
import { Image } from 'astro:assets';
import escudo_UNAM from '../img/UNAM.webp'
import logo_DGTIC from '../img/CATIC.webp'



---

<!--Header -->
<header class="bg-[url('/bg_head.webp')] h-14 md:h-24 pl-2 pr-2 border-b border-black ">
 

   <div class="flex justify-between  xl:mr-80 xl:ml-80 items-center">
    <div class="md:mt-3 hidden md:block">
      <a href="https://www.unam.mx" ><Image src={escudo_UNAM} alt="Logo UNAM" class="  "/></a>
    </div>
    <div class="md:mt-4 mt-3 m-3 ">
      <a href="https://catic.unam.mx" ><Image src={logo_DGTIC} alt="Logo CATIC" class=" w-[70px] h-[30px]  md:h-full md:w-full absolute md:relative z-50"/></a>
    </div>
   </div>
</header>

<!--Navegación -->

<nav class="absolute right-0 top-0  md:relative  md:bg-venice-blue-800 h-20 md:h-14 z-30 ">
  <div class="max-w-screen-xl flex flex-wrap place-content-end ml-56 md:ml-52 xl:ml-[500px]  pt-3 ">
    <button data-collapse-toggle="navbar-default" type="button" class="items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400" aria-controls="navbar-default" aria-expanded="false">
        
        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
        </svg>
    </button>
    <div class="hidden  md:block md:w-auto w-screen" id="navbar-default">
      <ul class="font-medium flex flex-col  md:p-0 w-screen  md:w-full rounded-md  md:flex-row md:space-x-8 md:mt-0  ">
        <li>
          <a href="/" class="block py-2 pl-3 pr-4 text-ath-gray-300 bg-white md:bg-transparent rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-ath-gray-50 md:p-0 dark:text-gray-400 md:dark:hover:text-ath-gray-50 dark:hover:bg-gray-500 dark:hover:text-white md:dark:hover:bg-transparent " aria-current="page" aria-label="Referencia a la página de incio"> <i class="fa-solid fa-house-chimney md:text-white"></i></a>
        </li>
        <li>
          <a href="/quienesSomos" class="block py-2 pl-3 pr-4 text-ath-gray-300 bg-white md:bg-transparent rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-ath-gray-50 md:p-0 dark:text-gray-400 md:dark:hover:text-ath-gray-50 dark:hover:bg-gray-500 dark:hover:text-white md:dark:hover:bg-transparent">Quienes somos</a>
        </li>
        <li>
          <a href="/consejeros/" class="block py-2 pl-3 pr-4 text-ath-gray-300 bg-white md:bg-transparent rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-ath-gray-50 md:p-0 dark:text-gray-400 md:dark:hover:text-ath-gray-50 dark:hover:bg-gray-500 dark:hover:text-white md:dark:hover:bg-transparent">Consejeros</a>
        </li>
        <li>
          <a href="https://www.red-tic.unam.mx/recursos/UNAM_AcuerdoCreacionCATIC2009.pdf" target="_blank" class="block py-2 pl-3 pr-4 text-ath-gray-300 bg-white md:bg-transparent rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-ath-gray-50 md:p-0 dark:text-gray-400 md:dark:hover:text-ath-gray-50 dark:hover:bg-gray-500 dark:hover:text-white md:dark:hover:bg-transparent">Acuerdo</a>
        </li>
        <li>
          <a href="/normatividad/" class="block py-2 pl-3 pr-4 text-ath-gray-300 bg-white md:bg-transparent rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-ath-gray-50 md:p-0 dark:text-gray-400 md:dark:hover:text-ath-gray-50 dark:hover:bg-gray-500 dark:hover:text-white md:dark:hover:bg-transparent">Normatividad</a>
        </li>
        <li>
          <a href="/convocatorias/" class="block py-2 pl-3 pr-4 text-ath-gray-300 bg-white md:bg-transparent rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-ath-gray-50 md:p-0 dark:text-gray-400 md:dark:hover:text-ath-gray-50 dark:hover:bg-gray-500 dark:hover:text-white md:dark:hover:bg-transparent">Convocatorias</a>
        </li>
      </ul>
    </div>
  </div>
</nav>
